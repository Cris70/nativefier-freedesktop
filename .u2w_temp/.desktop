[Desktop Entry]
Name=Google Plus
Categories=Network;
Exec=~/.webapps//
Icon=
Path=
StartupNotify=true
Terminal=false
Type=Application
Version=1.0

Actions=in-browser;reinstall;uninstall;
[Desktop Action reinstall]

Name=Reinstall
Exec=kdialog --title Reinstall --warningyesno 'Are you sure?' && nativefier-freedesktop ~/.webapps//.webapp
Icon=view-refresh

Name[it]=Reinstalla
Exec[it]=kdialog --title Reinstalla --warningyesno 'Sei sicuro?' && && nativefier-freedesktop ~/.webapps//.webapp


[Desktop Action uninstall]

Name=Uninstall
Exec=kdialog --title Uninstall --warningyesno 'Are you sure?' && rm -rf ~/.webapps// && rm -rf ~/.local/share/applications/.desktop
Icon=edit-delete

Name[it]=Disinstalla
Exec[it]=kdialog --title Disinstalla --warningyesno 'Sei sicuro?' && rm -rf ~/.webapps// && rm -rf ~/.local/share/applications/.desktop

[Desktop Action in-browser]

Name=Open in the browser
Exec=xdg-open plus.google.com
Icon=internet-web-browser
Name[it]=Apri nel browser

